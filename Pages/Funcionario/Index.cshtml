            <td>
                @Html.DisplayFor(modelItem => item.CTPS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dtNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereço)
            </td>
